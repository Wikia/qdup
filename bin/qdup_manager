#!/usr/bin/perl -w

use strict;

use FindBin qw/$Bin/;
use lib "$Bin/../lib";

use Getopt::Long;
use Qdup::Manager;

my $table = 'qdup_jobs';
my $queue = 'main';
my $pool  = 1;
my $lib;

GetOptions( 'table=s' => \$table,
            'queue=s' => \$queue,
            'pool=i'  => \$pool,
            'lib=s'   => \$lib   );

my $manager = Qdup::Manager->new( table => $table,
                                  queue => $queue,
                                  pool  => $pool,
                                  lib   => $lib   );
                                  
$manager->run;

